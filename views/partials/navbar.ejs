<div class="bg-color">
	<div class="container-fluid">
		<nav class="navbar navbar-default">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>                        
				</button>
				<a class="navbar-brand" href="/">
					<i class="fas fa-book brand_logo"></i>
					<div class="logo">
						<span class="logo_p1">Kafka</span>
						<span class="logo_p2">Book for everyone</span>  
					</div>
				</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li><a href="/store">Store</a></li>
					<li><a href="#">Author</a></li>
					<li><a href="#">Blogs</a></li>
					<li><a href="#">About Us</a></li>
					<li>
						<form class="search-form">
							<input type="text" class="search-bar" placeholder="Enter book or author for searching..." name="search">
							<button class="search-btn" type="submit">
								<i class="glyphicon glyphicon-search"></i>
							</button>
						</form>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="phoneNum">
						<i class="fas fa-phone"></i> 
						<div class="phone">
							<p>0902-761-143</p>
							<small>Call for ordering</small>
						</div>
					</li>
					<% if(!currentUser){ %>
					<li>
						<a href="/login" class="userLogin">
							<i class="fas fa-user-circle"></i> 
							<div class="profile">
								<p>Account</p>
								<small>Login</small>
							</div>
						</a>
					</li>
					<% } else {%>
					<li class="dropdownBtn">
						<div class="user">
							<i class="fas fa-user-circle"></i> 
							<div class="profile">
								<p><%=currentUser.viewname%></p>
								<small>Profile</small>
							</div>
							<i class="fas fa-angle-down"></i>
						</div>
						<div class="dropdown-content">
							<a href="/order">My order</a>
							<a href="#">Notifications</a>
							<a href="/logout">Logout</a>
						</div>
					</li>
					<%}%>
					<li>
						<a href="/cart" class="cart"><i class="fas fa-shopping-basket"></i> Cart 
						<%if(cartSession){%>
						<span><%=cartSession%></span>
						<% } else { %>
						<span>0</span>
						<%}%>
						</a>
					</li>
				</ul>
			</div>
		</nav>
	</div>
</div>