<% include partials/header %>
<link rel="stylesheet" href="/stylesheet/partials/partial.css">
<link rel="stylesheet" href="/stylesheet/login.css">
<link rel="stylesheet" href="/stylesheet/animation/ani-login.css">
<link rel="stylesheet" href="/stylesheet/animation/ani-forget.css">
<script src="https://unpkg.com/eva-icons"></script>
</head>
<body>
	<% include partials/navbar%>
	<div class="container contentLogin">
		<div class="customize-md-6 content-left-appear">
			<div class="intro-content">
				<h1 class="name-appear"><i class="fas fa-book"></i> Kafka</h1>
				<p class="slogan-appear">Book for everyone</p>
				<p class="beMember-appear">Don't have account? Want to be a member?</p>
				<button class="beMember-appear">Join Us</button>
				<p class="social-appear">Or login via social account</p>
				<div>
					<button class="facebook-appear"><i class="fab fa-facebook-f"></i> <span>Facebook</span></button>
					<button class="twitter-appear"><i class="fab fa-twitter"></i> <span>Twitter</span></button>
					<button class="google-appear"><i class="fab fa-google"></i> <span>Google</span></button>
				</div>
			</div>
		</div>
		<div class="customize-md-6 content-right-appear">
			<div class="register-form">
				<div>
					<h2 class="name-appear">Login</h2>
					<p class="slogan-appear">Enter your username and password to log on.</p>
					<hr>
					<form action="/login" method="POST">
						<div class="form-group username-appear">
							<div class="input-group">
								<div class="input-group-addon"><i class="fas fa-user"></i></div>
								<input type="text" placeholder="Username" name="username" required>
							</div>
						</div>
						<div class="form-group appear">
							<div class="input-group">
								<div class="input-group-addon"><i class="fas fa-envelope"></i></div>
								<input type="email" placeholder="Email" name="email">
							</div>
						</div>
						<div class="form-group appear">
							<div class="input-group">
								<div class="input-group-addon"><i class="fas fa-envelope"></i></div>
								<input type="email" placeholder="Confirm Email" name="re-email">
							</div>
						</div>
						<div class="form-group password-appear">
							<div class="input-group">
								<div class="input-group-addon"><i class="fas fa-key"></i></div>
								<input type="password" placeholder="Password" pattern=".{3,}" name="password" required title="Your password requires equal to or more than 3 characters">
							</div>
						</div>
						<div class="form-group appear">
							<div class="input-group">
								<div class="input-group-addon"><i class="fas fa-key"></i></div>
								<input type="password" placeholder="Confirm Password" name="re-password">
							</div>
						</div>
						<button type="submit" class="btn btn-primary btn-block button-signup btnSignup-appear">Sign in</button>
					</form>
					<a href="#" class="forgot-appear">Forgot your password?</a>
				</div>
			</div>			
		</div>
	</div>

	<div class="container forgetPanel hide">
		<div class="forgot-left-disappear">
			<h2><i class="fas fa-unlock"></i> Forgot Password?</h2>
			<p>Enter the email which you have signed up for the account below here:</p>
			<p class="announce-appear"><i></i></p>
			<div>	
				<div class="input-group">
					<div class="input-group-addon"><i class="fas fa-at"></i></div>
					<input type="email" placeholder="Enter your email here..." name="email">
				</div>
				<button type="submit">Confirm email</button>
			</div>
			<p>Try to access with different account, <span>click here</span> <i class="fas fa-key"></i></p>
		</div>
		<div class="forgot-right-disappear">
			<div>
				<h2>Recovery Instruction</h2>
				<p><i class="fas fa-caret-right"></i> Enter the email of your account</p>	
				<p><i class="fas fa-caret-right"></i> Click button "Confirm email" to process</p>	
				<p><i class="fas fa-caret-right"></i> Wait until the loading icon stop then check the message in your email</p>	
				<p><i class="fas fa-caret-right"></i> Follow the link of the email to get back your password</p>
				<i data-eva="alert-triangle-outline" data-eva-width="20" data-eva-height="20" data-eva-fill="#e0e0e0"></i> No account with that email address exists	
			</div>
		</div>
	</div>
	
	<script src="/js/login.js"></script>
	<script src="/js/animation/loginAnimation.js"></script>
	<script type="module" src="/js/Utility/PutilCore.js"></script>
</body>
</html>