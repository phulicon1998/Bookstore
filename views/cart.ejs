<% include partials/header %>
	<link rel="stylesheet" href="/stylesheet/partials/partial.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/cart.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/navbar-color.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/partials/pricePanel.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/partials/crumbread.css">
	<script src="/js/cartJS.js" type="text/javascript"></script>
</head>
<body>
	<% include partials/navbar%>
	<% include partials/crumbread%>

	<div class="container all-content">
		<div class="content-loading">
			<div class="loading"></div>
			<p>Wait a few seconds...</p>
		</div>

		<div class="row checkoutPage">
			<div class="col-md-8 listCart">
				<h4 class="content-title" id="bookListHeader"><i class="fas fa-list-ul cate-icon"></i> Your cart</h4>
				<div class="row cheader">
					<div class="col-md-6">Books</div>
					<div class="col-md-3">Price</div>
					<div class="col-md-3">Amount</div>
				</div>
			</div>
			<div class="col-md-4 totalContent">
				<% include partials/pricePanel %>
				<div class="orderTask">
					<a href="/cart/order" class="btnOrder"><i class="fas fa-shopping-cart"></i> Create order</a>
					<a href="#" class="btnOrder btnRemove" id="btnRemove">Remove</a>	
				</div>
			</div>
		</div>

		<div class="noBookPlace">
			<div class="row">
				<div class="col-md-12">
					<h4 class="content-title"><i class="fas fa-list-ul cate-icon"></i> Your cart</h4>
					<div class="no-item">
						<i class="fas fa-cart-arrow-down fa-6x"></i>
						<p>You have no book in your cart. Continue shopping?</p>
						<a href="/store">Back to store</a>
					</div>
				</div>
			</div>
		</div>
		
		<h4 class="content-title wishlist-title">Your wishlist</h4>
	</div>

	<div class="footer-content">
		<% include partials/footer %>
	</div>
</body>
</html>