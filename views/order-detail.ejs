<% include partials/header %>
	<link rel="stylesheet" href="/stylesheet/partials/partial.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/order-detail.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/navbar-color.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/partials/crumbread.css">
	<link rel="stylesheet" type="text/css" href="/stylesheet/partials/personMenu.css">
	<script src="/js/orderJS.js" type="text/javascript"></script>
</head>
<body>
	<% include partials/navbar%>
	<% include partials/crumbread%>

	<div class="container space">
		<div class="row">
			<% include partials/personMenu%>
			<div class="col-md-9">
				<div class="section">
					<h4><i class="fas fa-file"></i> Order <span>KB<%=(order._id).toString().substring(0, 5)%></span></h4>
					<p>Status: <b><%=order.status%></b></p>
				</div>
				<div class="col-md-8">
					<div class="row rowHeader">
						<div class="col-md-8"><p><i class="fas fa-caret-down"></i> Books</p></div>
						<div class="col-md-4"><p>Price</p></div>
					</div>
					<%list.forEach(val => { %>
					<div class="row rowBook">
						<div class="col-md-8">
							<div class="book">
								<div>
									<img src="<%=val.book.image%>">
									<%if(val.cover){%>
									<p>covered!</p>
									<%}%>
								</div>
								<div>
									<p><span><%=val.book.name%></span></p>
									<p><%=val.book.author.name%></p>
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="price">
								<p>$<%=(val.price*val.quantity*(100 - val.discount)/100).toFixed(2)%> <span>$<%=val.price*val.quantity%></span> <span>-<%=val.discount%>%</span></p>
								<p>Unit price - $<%=val.price%> <i class="fab fa-product-hunt"></i></p>	
							</div>
						</div>
					</div>
					<%})%>
				</div>
				<div class="col-md-4">
					<div class="receiverAddress">
						<h5><i class="fas fa-caret-down"></i> Receiver address</h5>
						<p><i class="fas fa-user"></i> <%=order.receiver%></p>
						<p>Address: <%=order.address%>, <%=order.city%>, <%=order.country%></p>
						<p>Phone: 0942608024</p>	
					</div>
					<div class="deliveryPayment">
						<h5><i class="fas fa-caret-down"></i> Delivery & payment</h5>
						<p>Checkout method: COD</p>
						<%if(order.deliveryFast){%>
						<p>Delivery: Fast delivery ($20)</p>
						<%} else {%>
						<p>Delivery: Normal delivery ($15)</p>
						<%}%>
					</div>
					<button>View the bill</button>
				</div>
			</div>
		</div>
	</div>
	<% include partials/footer %>
</body>
</html>		