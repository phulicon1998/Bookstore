				<p class="typeTitle"><b>Publisher:</b> <%=book.publisher%></p>
				<p class="typeTitle"><b>Page Number:</b> <%=book.pageNumber%></p>
				<p class="typeTitle"><b>Language:</b> <%=book.language%></p>
				<p class="typeTitle"><b>ISBN:</b> <%=book.isbn%></p>
			</div>
		</div>

		<h4 class="detailContent subContent">Community reviews
			<%if(currentUser){%> 
			<span class="btnWrite" id="writeCmt"><i class="far fa-edit"></i> Rate & write review</span>
			<%} else {%>
			<a href="/login" class="btnWrite"><i class="far fa-edit"></i> Login To Write Review</a>
			<%}%>
		</h4>
		<p class="rateDetail"><i class="far fa-caret-square-down"></i> Rating Details</p>
		<div class="row comment writeCmt hideInput" id="cmtInput">
			<div class="col-md-1 text-center ava hideInput" id="avaImg">
				<i class="fas fa-book-reader readerImg"></i>
			</div>
			<div class="col-md-10 hideInput" id="placeWrite">
				<p>Your Rate -
					<i class="fas fa-star check uncheck" id="s0"></i>
					<i class="fas fa-star check uncheck" id="s1"></i>
					<i class="fas fa-star check uncheck" id="s2"></i>
					<i class="fas fa-star check uncheck" id="s3"></i>
					<i class="fas fa-star check uncheck" id="s4"></i>
					 - <b class="noRate" id="rateColor"><span id="rateVal">0</span>/5 star(s)</b> 
				</p>
				<textarea rows="1" class="areaModify" placeholder="Write your title here..." id="titleValue"></textarea>
				<textarea id="reviewValue" rows="3" placeholder="Review of this book..."></textarea>
				<%if(currentUser) {%>
				<input type="hidden" value="<%=currentUser._id%>">
				<%} else {%>
				<input type="hidden" value="">
				<%}%>
				<button id="send">Send review</button><button id="cancel">Cancel</button>
			</div>
		</div>
		<div class="row comment" id="listCmt">
			<%if(book.comment.length <= 0){%>
				<p class="noReview" id="noReview">There is no user review for this book yet.</p>
			<%} else {%>
				<%book.comment.forEach(val => {%>
				<div class="col-md-1 text-center ava">
					<i class="fas fa-book-reader readerImg"></i>
				</div>
				<div class="col-md-10 commentator">
					<div class="cmtInfo">
						<p><b><%=val.user.username%></b> has rated it
							<%for(var i = 0; i < 5; i++) {%>
								<%if(i < val.rate){%> 
								<i class="fas fa-star get"></i>
								<%} else {%>
								<i class="fas fa-star not"></i>
								<%}%>
							<%}%>
						</p>
						<p class="time">Feb 10th, 2016</p>	
					</div>
					<h4><b><%val.title%></b></h4>
					<p class="review"><%=val.review%></p>
