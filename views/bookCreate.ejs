<% include partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheet/navbar-color.css">
</head>
<body>
	<% include partials/navbar%>
	<div class="container">
		<h1>Add new book</h1>
		<form action="/books" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<input type="file" id="image" name="image" accept="image/*" class="form-control" required>
			</div>			
			<div class="form-group">
				<input type="text" name="book[name]" placeholder="Name" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[author]" placeholder="Author" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[isbn]" placeholder="ISBN" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[price]" placeholder="Price" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[discount]" placeholder="Discount" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[discountPrice]" placeholder="Discount Price" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[rating]" placeholder="Rating" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[publisher]" placeholder="Publisher" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[pageNumber]" placeholder="Page Number" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[cover]" placeholder="Cover" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[publishDate]" placeholder="Publish Date" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="book[language]" placeholder="Language" class="form-control">
			</div>
			<button class="btn btn-success">Add</button>
		</form>
	</div>

</body>
</html>